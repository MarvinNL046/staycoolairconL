{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/scripts/**/*", "src/utils/**/*", "src/types/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true
  }
}
